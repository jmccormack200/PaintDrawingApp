<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:id="@+id/brush_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_6"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_1"
        app:fabSize="mini"
        android:layout_above="@+id/brush_action_5"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:rippleColor="@color/White"
        android:layout_margin="8dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_5"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_2"
        app:fabSize="mini"
        android:layout_above="@+id/brush_action_4"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:rippleColor="@color/White"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_4"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_3"
        app:fabSize="mini"
        android:layout_above="@+id/brush_action_3"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:rippleColor="@color/White"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_3"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_4"
        app:fabSize="mini"
        android:layout_above="@+id/brush_action_2"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:rippleColor="@color/White"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_2"
        android:src="@drawable/circle_5"
        app:backgroundTint="@color/Grey"
        app:fabSize="mini"
        android:layout_above="@+id/brush_action_1"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:rippleColor="@color/White"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_1"
        android:src="@drawable/circle_6"
        app:backgroundTint="@color/Grey"
        app:fabSize="mini"
        android:layout_above="@+id/brush"
        android:layout_alignEnd="@+id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        tools:targetApi="lollipop"
        app:rippleColor="@color/White"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush"
        android:src="@drawable/ic_brush_black_24dp"
        app:fabSize="normal"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@null"
        android:visibility="visible"
        android:layout_margin="8dp"
        android:onClick="onClickExpand"/>

</RelativeLayout>