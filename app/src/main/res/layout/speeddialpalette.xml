<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/palette_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:clipToPadding="false"
                android:padding="@dimen/normal_padding">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palette_action_5"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Black"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palette_action_4"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Blue"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palette_action_3"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Aqua"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palete_action_2"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Green"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palete_action_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palete_action_1"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Red"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palete_action_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/palette"
        android:layout_alignEnd="@+id/palette"
        android:layout_margin="@dimen/normal_padding"
        android:contentDescription="@null"
        android:onClick="onClickColor"
        app:backgroundTint="@color/Yellow"
        app:fabSize="mini"
        app:rippleColor="@color/clickColor"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:onClick="onClickPalette"
        android:src="@drawable/ic_palette_black_24dp"
        android:visibility="visible"
        app:fabSize="normal"/>

</RelativeLayout>