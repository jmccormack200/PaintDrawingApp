<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/brush_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/normal_padding">

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_6"
        android:layout_above="@+id/brush_action_5"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_1"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_5"
        android:layout_above="@+id/brush_action_4"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_2"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_4"
        android:layout_above="@+id/brush_action_3"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_3"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_3"
        android:layout_above="@+id/brush_action_2"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_4"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_2"
        android:layout_above="@+id/brush_action_1"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_5"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        style="@style/speed_dial_brush_style"
        android:id="@+id/brush_action_1"
        android:layout_above="@+id/brush"
        android:layout_alignEnd="@+id/brush"
        android:onClick="onClickBrushSize"
        android:src="@drawable/circle_6"
        app:backgroundTint="@color/Grey"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:onClick="onClickBrush"
        android:scaleType="center"
        android:src="@drawable/ic_brush_black_24dp"
        android:visibility="visible"
        app:fabSize="normal"/>

</RelativeLayout>