<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="speed_dial_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">center</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/clickColor</item>
    </style>

    <style name="speed_dial_brush_style"
           parent="speed_dial_fab">
        <item name="android:onClick">onClickBrushSize</item>
        <item name="backgroundTint">@color/Grey</item>
    </style>

    <style name="speed_dial_brush_style_portrait"
           parent="speed_dial_brush_style">
        <item name="android:layout_alignEnd">@+id/brush</item>
    </style>

    <style name="speed_dial_brush_style_land"
           parent="speed_dial_brush_style">
        <item name="android:layout_alignTop">@id/brush</item>
    </style>

    <style name="speed_dial_palette_style"
           parent="speed_dial_fab">
        <item name="android:onClick">onClickColor"</item>
    </style>

    <style name="speed_dial_palette_style_portrait"
           parent="speed_dial_palette_style">
        <item name="android:layout_alignEnd">@+id/palette</item>
    </style>

    <style name="speed_dial_palette_style_landscape"
           parent="speed_dial_palette_style">
        <item name="android:layout_alignTop">@id/palette</item>
    </style>

</resources>
