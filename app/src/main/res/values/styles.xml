<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="speed_dial_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">center</item>
        <item name="app:fabSize">mini</item>
        <item name="app:rippleColor">@color/clickColor</item>
        <item name="tools:targetApi">lollipop"</item>
    </style>

    <style name="speed_dial_brush_style"
           parent="speed_dial_fab">
        <item name="android:layout_alignEnd">@+id/brush</item>
        <item name="android:onClick">onClickBrushSize</item>
        <item name="app:backgroundTint">@color/Grey</item>
    </style>

</resources>
