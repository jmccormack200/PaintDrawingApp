<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/palette_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:clipToPadding="false"
                android:padding="@dimen/normal_padding">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_6"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palette_action_5"
        app:backgroundTint="@color/Black"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_5"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palette_action_4"
        app:backgroundTint="@color/Blue"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_4"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palette_action_3"
        app:backgroundTint="@color/Aqua"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette_action_3"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palete_action_2"
        app:backgroundTint="@color/Green"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palete_action_2"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palete_action_1"
        app:backgroundTint="@color/Red"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palete_action_1"
        style="@style/speed_dial_palette_style_landscape"
        android:layout_toEndOf="@+id/palette"
        app:backgroundTint="@color/Yellow"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:onClick="onClickPalette"
        android:src="@drawable/ic_palette_black_24dp"
        android:visibility="visible"
        app:fabSize="normal"/>

</RelativeLayout>