<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:padding="@dimen/normal_padding"
    android:clipToPadding="false"
    android:id="@+id/brush_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_6"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_1"
        android:scaleType="center"
        app:fabSize="mini"
        android:layout_toEndOf="@+id/brush_action_5"
        android:layout_alignTop="@id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:rippleColor="@color/clickColor"
        android:layout_margin="@dimen/normal_padding"
        app:borderWidth="0dp"
        android:onClick="onClickBrushSize"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_5"
        app:backgroundTint="@color/Grey"
        android:src="@drawable/circle_2"
        android:scaleType="center"
        app:fabSize="mini"
        android:layout_toEndOf="@+id/brush_action_4"
        android:layout_alignTop="@id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/normal_padding"
        app:rippleColor="@color/clickColor"
        android:onClick="onClickBrushSize"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_4"
        app:backgroundTint="@color/Grey"
        android:scaleType="center"
        android:src="@drawable/circle_3"
        app:fabSize="mini"
        android:layout_toEndOf="@+id/brush_action_3"
        android:layout_alignTop="@id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/normal_padding"
        app:rippleColor="@color/clickColor"
        android:onClick="onClickBrushSize"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_3"
        app:backgroundTint="@color/Grey"
        android:scaleType="center"
        android:src="@drawable/circle_4"
        app:fabSize="mini"
        android:layout_toEndOf="@+id/brush_action_2"
        android:layout_alignTop="@id/brush"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/normal_padding"
        app:rippleColor="@color/clickColor"
        android:onClick="onClickBrushSize"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_2"
        android:src="@drawable/circle_5"
        android:scaleType="center"
        app:backgroundTint="@color/Grey"
        app:fabSize="mini"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/brush_action_1"
        android:layout_alignTop="@id/brush"
        android:layout_margin="@dimen/normal_padding"
        app:rippleColor="@color/clickColor"
        android:onClick="onClickBrushSize" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush_action_1"
        android:src="@drawable/circle_6"
        android:scaleType="center"
        app:backgroundTint="@color/Grey"
        app:fabSize="mini"
        android:contentDescription="@null"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/normal_padding"
        android:layout_toEndOf="@id/brush"
        android:layout_alignTop="@id/brush"
        tools:targetApi="lollipop"
        app:rippleColor="@color/clickColor"
        android:onClick="onClickBrushSize" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/brush"
        android:src="@drawable/ic_brush_black_24dp"
        android:scaleType="center"
        app:fabSize="normal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@null"
        android:visibility="visible"
        android:onClick="onClickBrush"/>

</RelativeLayout>